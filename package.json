{
  "name": "ucf-course-api",
  "description": "An unofficial API for UCF's courses",
  "version": "1.0.0",
  "main": "server.js",
  "license": "MIT",
  "scripts": {
    "build": "babel ./src -d dist --ignore src/__tests__/**/*",
    "dev": "nodemon --exec 'yarn lint && babel-node ./src/server.js' | pino-pretty",
    "lint": "eslint './src/**/*.js'",
    "start": "node ./dist/server.js | pino-pretty",
    "test": "jest --bail --passWithNoTests --coverage"
  },
  "dependencies": {
    "@babel/runtime": "^7.14.0",
    "cheerio": "^1.0.0-rc.6",
    "express": "^4.17.1",
    "node-fetch": "^2.6.1",
    "pino": "^6.11.3",
    "pino-pretty": "^4.7.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.16",
    "@babel/core": "^7.14.0",
    "@babel/eslint-parser": "^7.13.14",
    "@babel/node": "^7.13.13",
    "@babel/plugin-transform-runtime": "^7.13.15",
    "@babel/preset-env": "^7.14.1",
    "eslint": "^7.25.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.6",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./src/**/*.js": [
      "prettier --write",
      "yarn lint",
      "yarn test"
    ]
  },
  "engines": {
    "node": "14.x",
    "yarn": "1.x"
  }
}
